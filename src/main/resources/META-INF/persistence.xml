<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
   version="2.0">
   <persistence-unit name="servicios_remotos">   
   	  <provider>org.hibernate.ejb.HibernatePersistence</provider>   
      <jta-data-source>java:jboss/datasources/ServiciosRemotosDS</jta-data-source>
      
      <class>ar.com.cuyum.cnc.localizacion.model.Provincia</class>
      <class>ar.com.cuyum.cnc.localizacion.model.Partido</class>
      <class>ar.com.cuyum.cnc.localizacion.model.Localidad</class>
      <class>ar.com.cuyum.cnc.localizacion.model.Area</class>
      <class>ar.com.cuyum.cnc.localizacion.model.Area2</class>
      <class>ar.com.cuyum.cnc.localizacion.model.Servicio</class>
      <class>ar.com.cuyum.cnc.localizacion.model.Acceso</class>
      <class>ar.com.cuyum.cnc.localizacion.model.Periodo</class>
      <class>ar.com.cuyum.cnc.localizacion.model.Nap</class>
      
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />      
         <property name="hibernate.show_sql" value="false"/>
         <property name="hibernate.format_sql" value="true"/>
      </properties>
   </persistence-unit>
</persistence>
